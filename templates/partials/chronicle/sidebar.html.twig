<div class="space-y-8 sticky top-16">

	{% if config.plugins.pagination.enabled and collection.params.pagination and not search_results %}
		<div class="flex justify-center">
			{% include 'partials/pagination.html.twig' with { base_url: page.url, pagination: collection.params.pagination } %}
		</div>
	{% endif %}

	{% if config.plugins.taxonomylist.enabled %}

		{% set taxlist = children_only is defined ? taxonomylist.getChildPagesTags() : taxonomylist.get() %}

		{% if taxlist %}

			{% embed 'embeds/panel.html.twig' %}
				{% set icon = 'folders' %}
				{% set title = 'Kategorien' %}
				{% block content %}
					<div class="text-center space-x-1 space-y-1">
						{% include 'partials/taxonomy.html.twig' with {list: taxlist.category|keys, name:'category', icon: 'folder'} %}
					</div>
				{% endblock %}
			{% endembed %}

			{% embed 'embeds/panel.html.twig' %}
				{% set icon = 'circles' %}
				{% set title = 'Gruppen' %}
				{% block content %}
					<div class="text-center space-x-1 space-y-1">
						{% include 'partials/taxonomy.html.twig' with {list: taxlist.group|keys, name:'group', icon: 'circle-dotted'} %}
					</div>
				{% endblock %}
			{% endembed %}

			{% embed 'embeds/panel.html.twig' %}
				{% set icon = 'bookmarks' %}
				{% set title = 'Tags' %}
				{% block content %}
					<div class="text-center space-x-1 space-y-1">
						{% include 'partials/taxonomy.html.twig' with { list: taxlist.tag|keys, name: 'tag', icon: 'bookmark'} %}
					</div>
				{% endblock %}
			{% endembed %}

		{% endif %}
	{% endif %}

	{% if config.plugins.feed.enabled %}

		{% embed 'embeds/panel.html.twig' %}
			{% set icon = 'rss' %}
			{% set title = 'Abonnieren' %}
			{% block content %}
				<a class="link link-hover" href="{{ feed_url }}.atom">Atom 1.0</a>
				<a class="link link-hover" href="{{ feed_url }}.rss">RSS</a>
				{% if config.plugins.feed.enable_json_feed %}
					<a class="link" href="{{ feed_url }}.json">JSON</a>
				{% endif %}
			{% endblock %}
		{% endembed %}

	{% endif %}
</div>
