<div class="w-full bg-neutral-content shadow rounded-box">

	<div class=" p-5">
		<div class="text-primary font-medium uppercase text-sm tracking-wide">{{ event.taxonomy.category|first }}</div>
		<h3 class="text-xl font-bold">{{ event.title }}</h3>
	</div>

	{% set image = event.media.images|first %}
	{% if image %}
		<figure>
			{{ image.cropZoom(600, 300).html|raw }}
		</figure>
	{% endif %}

	<div class="p-5">
		<div class="text-center">
			{% for group in event.taxonomy.group %}
				<a class="badge badge-secondary" href="/{{group|lower}}">
					{{ group }}
				</a>
			{% endfor %}
		</div>
		<div class="flex items-center justify-between mt-5">
			<div class="font-medim text-sm">{{ event.header.dtend|nicetime }}</div>
			<a class="btn btn-primary btn-xs ml-5" href="{{ event.url }}{{ event.parent ? '#'~event.title|hyphenize : ''}}">Details</a>
		</div>
	</div>
</div>
