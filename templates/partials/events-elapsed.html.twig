{% set events = content ? page.collection(content) : page.collection %}

{% if events|length %}
	<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 items-start">
		{% for event in events|slice(0,count|default(6)) %}
			{% include 'partials/event-elapsed.html.twig' %}
		{% endfor %}
	</div>
{% else %}
		{% include 'partials/empty.html.twig' with {msg: 'Keine vergangene Anl√§sse.'} %}
{% endif %}