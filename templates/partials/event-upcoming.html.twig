<div class="w-full bg-neutral-content shadow rounded-box">

	<div class="px-4 py-4">
		<div class="flex items-center justify-between">
			<div class="whitespace-nowrap bg-primary rounded-lg font-bold tracking-wide uppercase py-2 px-3 text-primary-content text-sm mr-5">
				{{ event.dtstart|date('j. M') }}
			</div>
			<div class="text-right">
				<div class="uppercase font-medium text-xs tracking-wide text-primary opacity-90">{{ event.taxonomy.category|first }}</div>
				<h3 class="text-lg font-semibold">{{ event.title }}</h3>
			</div>
		</div>
	</div>


	{% if event.image %}
		<div class="relative">
			<figure>
				{{ event.image.cropZoom(600, 300).html|raw }}
			</figure>
			<div class="absolute left-5 bottom-3 text-center">
				{% for group in event.taxonomy.group|sort %}
					<a class="badge badge-primary" href="/{{group|lower}}">
						{{ group }}
					</a>
				{% endfor %}
			</div>
		</div>
	{% else %}
		<div class="px-5 py-3 bg-base-300">
			{% for group in event.taxonomy.group|sort %}
				<a class="badge" href="/{{group|lower}}">
					{{ group }}
				</a>
			{% endfor %}
		</div>
	{% endif %}

	{% if not event.tbd %}
		<div class="px-5 py-3">
			<div class="font-medium text-sm">{{ event.dtstart|startEnd(event.dtend, true) }}</div>
			{% if event.parent %}
				<div class="font-light text-xs mt-1">
					Anlass
					{{ event.parent.nr}}
					von
					{{ event.parent.total }}
					des
					{{ event.taxonomy.category|first }}
					<a class="link link-hover text-primary" href="{{ event.url }}">{{ event.parent.title }}</a>
					vom
					{{ event.parent.dtstart|startEnd(event.parent.dtend) }}
				</div>
			{% endif %}
		</div>
	{% endif %}

	<div class="flex items-center justify-between border-t border-solid px-5 py-4 text-sm">
		{% if event.tbd %}
			<div>Infos folgen!</div>
		{% elseif event.registration.required %}
			<div>Anmeldung bis
				{{ event.registration.dtend|date('j.n.y') }}</div>
		{% else %}
			<div>Keine Anmeldung nÃ¶tig.</div>
		{% endif %}
		<a class="btn btn-outline btn-xs ml-5" href="{{ event.url }}{{ event.parent ? '#'~event.title|hyphenize : ''}}">Details</a>
	</div>

</div>
