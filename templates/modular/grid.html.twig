<div class="mx-auto prose {{ page.header.centered ? 'text-center' : '' }}">
  {{ page.content|raw }}
</div>

<div class="grid gap-8 mt-12 {{ page.header.grid ?? 'grid-cols-1 lg:grid-cols-2' }}">
  {% for module in page.collection %}
    <div class="{{ module.header.grid ?? '' }}">
      {{ module.content|raw }}
    </div>
  {% endfor %}
</div>