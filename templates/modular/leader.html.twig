{% switch page.header.status %}
	{% case 'teilzeit' %}
		{% set status = 'ring-warning' %}
	{% case 'pause' %}
		{% set status = 'ring-error' %}
	{% default %}
		{% set status = 'ring-success' %}
{% endswitch %}

{% set image = page.media.images|first %}
{% set size = size|default('xxxl') %}

<div class="flex flex-col items-center">
	<div class="avatar">
		<div class="rounded-full w-48 h-48 ring {{ status }} ring-offset-base-100 ring-offset-2">
			{{ image.cropZoom(200,200).html|raw }}
		</div>
	</div>
	<h4 class="font-md font-bold mt-3">{{ page.title }}</h4>
	<div class="font-light">{{ page.header.name }}</div>
</div>
